{% extends 'layout/dashboard.html.twig' %}

{% block title %}Gutschriften{% endblock %}

{% block main %}
<div class="container mx-auto p-6 space-y-4 dark:text-gray-100">
    <div class="flex items-center justify-between">
        <h1 class="text-2xl font-semibold">Gutschriften</h1>
        <a href="{{ path('app_credit_new') }}" class="px-4 py-2 rounded bg-blue-600 text-white">Neu</a>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full text-left">
            <thead>
                <tr class="border-b">
                    <th class="py-2 px-3">ID</th>
                    <th class="py-2 px-3">Beleg-ID</th>
                    <th class="py-2 px-3">Person</th>
                    <th class="py-2 px-3">Erstellt am</th>
                    <th class="py-2 px-3"></th>
                </tr>
            </thead>
            <tbody>
            {% for credit in credits %}
                <tr class="border-b hover:bg-gray-50/10">
                    <td class="py-2 px-3">{{ credit.id }}</td>
                    <td class="py-2 px-3">{{ credit.documentId }}</td>
                    <td class="py-2 px-3">{{ credit.person ? credit.person.name : '-' }}</td>
                    <td class="py-2 px-3">{{ credit.createdAt ? credit.createdAt|date('Y-m-d H:i') : '' }}</td>
                    <td class="py-2 px-3 text-right space-x-2">
                        <a href="{{ path('app_credit_show', {id: credit.id}) }}" class="text-blue-500">Anzeigen</a>
                        <a href="{{ path('app_credit_edit', {id: credit.id}) }}" class="text-yellow-500">Bearbeiten</a>
                        <form method="post" action="{{ path('app_credit_delete', {id: credit.id}) }}" style="display:inline" onsubmit="return confirm('Wirklich löschen?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ credit.id) }}">
                            <button class="text-red-500" type="submit">Löschen</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="py-4 px-3 text-center text-gray-400 dark:text-gray-400">Keine Einträge gefunden.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
