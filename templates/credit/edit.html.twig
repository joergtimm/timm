{% extends 'layout/dashboard.html.twig' %}

{% block title %}Gutschrift bearbeiten{% endblock %}

{% block main %}
<div class="container mx-auto p-6 space-y-4 dark:text-gray-100">
    <h1 class="text-2xl font-semibold">Gutschrift bearbeiten</h1>

    {% include 'credit/_form.html.twig' with {form: form} %}

    <div class="flex items-center justify-between">
        <a href="{{ path('app_credit_index') }}" class="text-blue-500">Zurück zur Liste</a>
        <form method="post" action="{{ path('app_credit_delete', {id: credit.id}) }}" onsubmit="return confirm('Wirklich löschen?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ credit.id) }}">
            <button class="px-3 py-1 rounded bg-red-600 text-white" type="submit">Löschen</button>
        </form>
    </div>
</div>
{% endblock %}
