{% extends 'layout/dashboard.html.twig' %}

{% block title %}Company index{% endblock %}

{% block main %}
    <h1>Company index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>TaxId</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {# Iteriere Ã¼ber die aktuellen Seiten-Ergebnisse des Paginators #}
        {% for company in pager.currentPageResults %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.name }}</td>
                <td>{{ company.taxId }}</td>
                <td>
                    <a href="{{ path('app_company_show', {'id': company.id}) }}">show</a>
                    <a href="{{ path('app_company_edit', {'id': company.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_company_new') }}">Create new</a>
{% endblock %}
